Player = require('./public/javascripts/player.js')

function Bullet(x,y,dx,dy){
	var inherit = new Player('',x,y);
	this.uid = inherit.uid;
	this.getX = inherit.getX;
	this.getY = inherit.getY;
	this.getRot = inherit.getRot;
	var vlength = veclength(dx,dy);
	this.ax = dx/vlength;
	this.ay = dy/vlength;
	this.updateEnt = updateBullet;
	
}
function updateBullet(){
	this.x += this.ax;
	this.y += this.ay;
	console.log(this.uid()+' ' +this.getY());
	
}
function veclength(x,y){
	return Math.sqrt(x*x+y*y);
}

	module.exports = Bullet;
